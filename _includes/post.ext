<div class="post">
  <p class="meta"><span class="date">{{ post.date | date_to_string }}</span> ~ <span class="comments"><a href="#disqus_thread" data-disqus-identifier="{{ post.wordpress_id }} {{ post.wordpress_url }}"></a></span></p>
  <h2 class="title"><a href="{{ post.url }}" title="{{ post.title }}">{{ post.title }}</a></h2>
  <div class="entry">
    <div class="tweetmeme_button" style="float: left; margin-right: 10px;"><iframe src="http://api.tweetmeme.com/button.js?url=http%3A%2F%2Frafael.adm.br{{ post.url | cgi_escape }}%2F&amp;source=rafaelp&amp;style=normal&amp;service=bit.ly" height="61" width="50" frameborder="0" scrolling="no"></iframe></div>
    {{ post.content | markdownify | html_truncatewords }}
    {% if post.podcast %}
      <object type="application/x-shockwave-flash" name="pod_audio_1" style="outline-style: none; outline-width: initial; outline-color: initial; visibility: visible; " data="http://rafael.adm.br/wp-content/plugins/podcasting/player/player.swf" width="290" height="24" id="pod_audio_1"><param name="wmode" value="opaque"><param name="menu" value="false"><param name="flashvars" value="soundFile={{ post.podcast | cgi_escape }}&amp;playerID=pod_audio_1"></object>
      <script type="text/javascript">
      AudioPlayer.embed("pod_audio_1", {soundFile: "{{ post.podcast | cgi_escape }}"});
      </script>
    {% endif %}
    {% if post.content.size > 200 %}
      <p><a class="more-link" href="{{ post.url }}" title="{{ post.title }}">Continuar Lendo</a></p>
    {% endif %}
  </div><!-- /.entry -->
  <div class="tags">
    {% if post.tags != empty %}
    Tags:
      {% for tag in post.tags %}
        <a href="/tags#{{tag | parametrize }}" rel="tag">{{ tag }}</a>{% if forloop.last == false %}, {% endif %}
      {% endfor %}
    {% endif %}
  </div>
</div><!-- /.post -->